<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1><%= @podcast.title %></h1>
    </div>
  </div>

  <div id="links">
    <div class="wrapper_skinny">
      <ul>
        <li><%= link_to "Lessons", root_path, class: "button button_highlight button_block" %></li>
        <li><%= link_to "New Lesson", new_podcast_episode_path(@podcast), class: "button button_highlight button_block" %></li>
        <li><%= link_to "Account Settings", edit_podcast_registration_path, class: "button button_highlight button_block" %></li>
        <li><%= link_to "View Podcast", podcast_path(current_podcast), class: "button button_highlight button_block" %></li>
      </ul>
    </div>
  </div>
  <hr>

  <div id="form">
	  <div class="wrapper_skinny">
			<%= render 'form' %>
		</div>
	</div>
</div>